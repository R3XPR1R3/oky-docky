{
  "id": "my-form-id",
  "title": "My Form Title",
  "description": "Brief description of the form",
  "version": "1.0.0",
  "metadata": {
    "category": ["Category1", "Category2"],
    "format": ["PDF", "Online"],
    "estimatedTime": "10 minutes",
    "requiredDocuments": ["Document 1", "Document 2"]
  },
  "steps": [
    {
      "id": "step-1",
      "title": "Step 1 Title",
      "description": "Brief step description",
      "fields": [
        {
          "id": "textField",
          "type": "text",
          "label": "Text Field Label",
          "placeholder": "Enter text...",
          "helpText": "Optional help text",
          "validations": [
            {
              "type": "required",
              "message": "This field is required"
            }
          ]
        },
        {
          "id": "emailField",
          "type": "email",
          "label": "Email Address",
          "placeholder": "you@example.com",
          "validations": [
            {
              "type": "required",
              "message": "Email is required"
            },
            {
              "type": "email",
              "message": "Invalid email format"
            }
          ]
        },
        {
          "id": "numberField",
          "type": "number",
          "label": "Age",
          "placeholder": "18",
          "validations": [
            {
              "type": "required",
              "message": "Age is required"
            },
            {
              "type": "min",
              "value": 18,
              "message": "Must be at least 18"
            }
          ]
        },
        {
          "id": "selectField",
          "type": "select",
          "label": "Choose an option",
          "placeholder": "Select...",
          "options": [
            {
              "label": "Option 1",
              "value": "option1"
            },
            {
              "label": "Option 2",
              "value": "option2"
            },
            {
              "label": "Option 3",
              "value": "option3"
            }
          ],
          "validations": [
            {
              "type": "required",
              "message": "Please select an option"
            }
          ]
        },
        {
          "id": "radioField",
          "type": "radio",
          "label": "Choose one",
          "options": [
            {
              "label": "Choice A",
              "value": "a"
            },
            {
              "label": "Choice B",
              "value": "b"
            }
          ],
          "validations": [
            {
              "type": "required",
              "message": "Please make a selection"
            }
          ]
        },
        {
          "id": "conditionalTrigger",
          "type": "checkbox",
          "label": "I have additional information to provide",
          "helpText": "Check this to reveal additional fields"
        },
        {
          "id": "conditionalField",
          "type": "textarea",
          "label": "Additional Information",
          "placeholder": "Provide details...",
          "conditional": {
            "field": "conditionalTrigger",
            "operator": "equals",
            "value": true
          },
          "validations": [
            {
              "type": "required",
              "message": "Additional information is required"
            }
          ]
        },
        {
          "id": "dateField",
          "type": "date",
          "label": "Date",
          "defaultValue": "2025-12-18",
          "validations": [
            {
              "type": "required",
              "message": "Date is required"
            }
          ]
        }
      ]
    },
    {
      "id": "step-2",
      "title": "Review & Submit",
      "description": "Review your information",
      "fields": [
        {
          "id": "certify",
          "type": "checkbox",
          "label": "I certify that the information provided is true and correct",
          "validations": [
            {
              "type": "required",
              "message": "You must certify to continue"
            }
          ]
        }
      ]
    }
  ]
}
